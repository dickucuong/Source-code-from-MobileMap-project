<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="90dip" android:weightSum="2.0">
	-
	-
	<LinearLayout android:orientation="vertical"
		android:layout_height="90dip" android:layout_width="150dip">
		<TextView android:id="@+id/result_search_listview_textview_name"
			android:layout_width="150dip" android:layout_height="20dip"
			android:text="Name" android:singleLine="true" />
		<TextView android:id="@+id/result_search_listview_textview_address"
			android:layout_width="150dip" android:layout_height="30dip"
			android:textSize="10dip" android:maxLines="2" />
		<TextView android:id="@+id/result_search_listview_textview_phone"
			android:text="Phone" android:singleLine="true" android:layout_width="150dip"
			android:layout_height="20dip" />
		-
		-
		<LinearLayout android:orientation="horizontal"
			android:layout_width="150dip" android:layout_height="20dip">
			<RatingBar android:id="@+id/result_search_listview_ratingbar_numfavorites"
				android:layout_width="100dip" android:layout_height="20dip"
				style="?android:attr/ratingBarStyleSmall" android:numStars="5"
				android:rating="4" />
			<TextView android:id="@+id/result_search_listview_textview_reveiw"
				android:text="reveiw" android:singleLine="true"
				android:layout_width="50dip" android:layout_height="20dip" />
		</LinearLayout>
	</LinearLayout>
	<TextView android:id="@+id/result_search_listview_textview_distance"
		android:text="0.2ml" android:layout_height="wrap_content"
		android:layout_gravity="center" android:layout_width="30dip"
		android:singleLine="true" android:textSize="10dip" />
	<Button android:id="@+id/result_search_listview_button_direction"
		android:background="@android:drawable/ic_menu_myplaces"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:layout_width="20dip" />
	<ImageView android:id="@+id/result_search_listview_imageview_picture"
		android:layout_height="90dip" android:layout_width="100dip"
		android:background="@android:drawable/alert_dark_frame" android:src="@drawable/icon" />
	-
	-
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<Button android:id="@+id/result_search_listview_button_showmap"
			android:layout_height="30dip" android:layout_width="20dip"
			android:layout_marginTop="5dip" android:background="@android:drawable/ic_dialog_map"
			android:layout_gravity="center_horizontal" />
	</LinearLayout>
</LinearLayout>