<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="1">
        <TableLayout android:id="@+id/TableLayout1"
            android:stretchColumns="1" android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow android:id="@+id/tableRow7" android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView android:text="Longitude" android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:padding="10dip"
                    android:id="@+id/dialog_add_poi_label_longtidude"></TextView>
                <EditText android:singleLine="True"
                    android:background="@android:drawable/editbox_background"
                    android:id="@+id/dialog_add_poi_edit_longitude"
                    android:layout_height="wrap_content" android:paddingRight="10dip"
                    android:layout_width="200dip">
                </EditText>
            </TableRow>
            <TableRow android:id="@+id/tableRow6" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/dialog_add_poi_label_latidude"
                    android:text="Latitude" android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:padding="10dip"></TextView>
                <EditText android:singleLine="True"
                    android:background="@android:drawable/editbox_background"
                    android:id="@+id/dialog_add_poi_edit_latitude"
                    android:layout_height="wrap_content" android:paddingLeft="10dip"
                    android:layout_width="200dip">
                </EditText>
            </TableRow>
            <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/dialog_add_poi_label_categoty"
                    android:text="Category" android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:padding="10dip"></TextView>
                <Spinner android:id="@+id/dialog_add_poi_spinner_categoty"
                    android:layout_height="wrap_content" android:layout_width="200dip"></Spinner>
            </TableRow>
            <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/dialog_add_poi_label_categoty"
                    android:text="POI Type" android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:padding="10dip"></TextView>
                <RadioGroup android:orientation="horizontal" android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <RadioButton android:text="Public"
                        android:layout_width="wrap_content" android:id="@+id/dialog_add_poi_radio_public"
                        android:layout_height="wrap_content" android:checked="true"></RadioButton>
                    <RadioButton android:text="Private"
                        android:layout_width="wrap_content" android:id="@+id/dialog_add_poi_radio_private"
                        android:layout_height="wrap_content"></RadioButton>
                </RadioGroup>
            </TableRow>
            <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/dialog_add_poi_label_name"
                    android:text="Name" android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:padding="10dip"></TextView>
                <EditText android:singleLine="True"
                    android:background="@android:drawable/editbox_background"
                    android:id="@+id/dialog_add_poi_edit_name" android:layout_height="wrap_content"
                    android:paddingRight="10dip" android:layout_width="200dip">
                </EditText>
            </TableRow>
            <TableRow android:id="@+id/tableRow4" android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView android:id="@+id/dialog_add_poi_label_description"
                    android:text="Description" android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:padding="10dip"></TextView>
                <EditText android:singleLine="True"
                    android:background="@android:drawable/editbox_background"
                    android:id="@+id/dialog_add_poi_edit_description"
                    android:layout_height="wrap_content" android:paddingRight="10dip"
                    android:layout_width="200dip">
                </EditText>
            </TableRow>
            <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/dialog_add_poi_label_addressid"
                    android:text="Address" android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:padding="10dip"></TextView>
                <EditText android:singleLine="True"
                    android:background="@android:drawable/editbox_background"
                    android:id="@+id/dialog_add_poi_edit_address"
                    android:layout_height="wrap_content" android:layout_width="200dip">
                </EditText>
            </TableRow>
            <!-- add picture for special poi -->
            <TableRow android:id="@+id/tableRow" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:baselineAligned="true">
                <TextView android:id="@+id/dialog_add_poi_label_picture"
                    android:text="Picture" android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:padding="10dip"
                    android:layout_gravity="center_vertical" />
                <ImageView android:id="@+id/dialog_add_poi_picture"
                    android:layout_width="80dip" android:layout_height="80dip"
                    android:background="@android:drawable/gallery_thumb"
                    android:layout_gravity="center" />
            </TableRow>
            <!-- anh.trinh -->

        </TableLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:layout_height="1dip" android:background="#FF909090"
            android:layout_width="match_parent" />
        <LinearLayout android:gravity="center"
            android:layout_height="wrap_content" android:layout_width="match_parent"
            android:paddingTop="5dip" android:paddingLeft="5dip"
            android:id="@+id/dialog_add_poi_linearlayout_btncommand">
            <Button android:text="Add POI" android:id="@+id/dialog_add_poi_button_addpoi"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_weight="1.0"></Button>
            <Button android:text="Cancel" android:id="@+id/dialog_add_poi_button_cancel"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_weight="1.0"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

